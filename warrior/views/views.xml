    <!-- Top menu item -->

    <menuitem name="Warrior" id="warrior.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Lista" id="warrior.menu_game" parent="warrior.menu_root"/>


    <!-- actions -->

    <menuitem name="Players" id="warrior.menu_player" parent="warrior.menu_game"
              action="warrior.action_player_window"/>
    <menuitem name="Clase" id="warrior.menu_clase" parent="warrior.menu_game"
              action="warrior.action_clase_window"/>
    <menuitem name="Zonas" id="warrior.menu_zona" parent="warrior.menu_game"
              action="warrior.action_zona_window"/>
    <menuitem name="Enemigos" id="warrior.menu_mob" parent="warrior.menu_game"
              action="warrior.action_mob_window"/>
     <menuitem name="Armas" id="warrior.menu_arma" parent="warrior.menu_game"
              action="warrior.action_arma_window"/>
    <menuitem name="Tipo Enemigo" id="warrior.menu_mob_type" parent="warrior.menu_game"
              action="warrior.action_mob_type_window"/>
    <menuitem name="Viajar" id="warrior.menu_travel" parent="warrior.menu_game"
              action="warrior.action_travel_window"/>

  </data>
</odoo>